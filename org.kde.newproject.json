{
    "id": "org.kde.newproject",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.10",
    "sdk": "org.kde.Sdk",
    "command": "newproject",
    "tags": [
        "nightly"
    ],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "separate-locales": false,

    "modules": [
        {
            "name": "newproject",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "dir",
                    "path": ".",
                    "skip": [
                        ".git"
                    ]
                }
            ]
        }
    ]
}
